class Solution
{
#include<bits/stdc++.h>
    public:
    //Function to reverse words in a given string.
    string reverseWords(string S) 
    { 
        string ans="";
        string temp = "";
        int i = S.length() - 1;
        while(i >= 0)   {
            if(S[i] == '.') {
                reverse(temp.begin(), temp.end());
                if(ans.length() == 0)
                ans.append(temp);
                else  {
                    ans.push_back('.');
                    ans.append(temp);
                }
                temp = "";
            }
            else    {
                temp.push_back(S[i]);
            }
            i--;
        }
        
        reverse(temp.begin(), temp.end());
        if(ans.length() == 0)
            ans.append(temp);
        else  {
            ans.push_back('.');
            ans.append(temp);
        }
        return ans;
        
    } 
};
