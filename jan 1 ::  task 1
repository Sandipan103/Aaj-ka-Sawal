# include <iostream>
using namespace std;

int main()  {
    cout << "enter a number : " << endl;
    int n;
    cin >> n;
    for(int i=0; i<n; i++)  {
        // space print karo
        for(int j = 0;  j < n - i;  j++)
        cout << " ";

        // triangle print karo
        for(int j = 0;   j< 2 * i + 1;   j++)
        cout << "*";

        cout << endl;
    }
    return 0;
}
